@model MvcBookStore.Models.Order

@{
    ViewBag.Title = "AddressAndPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <h2>Dostawa i płatności</h2>
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Dane do wysyłki</legend>
        @Html.EditorForModel()
    </fieldset>
    <fieldset>
        <legend>Płatność</legend>
        <p>Wszystkie ksiązki 10% taniej z kodem "czarnypiatek"</p>
        <div class="editor-label">
            @Html.Label("Kod Promocyjny")
        </div>
        <div class="editor-field">
            @Html.TextBox("PromoCode")
        </div>
    </fieldset>
    <p class="button">
        @Html.ActionLink("Zamów", "Complete", "Checkout")
    </p>
}
